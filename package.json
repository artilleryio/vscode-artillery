{
  "private": true,
  "preview": true,
  "name": "vscode-artillery",
  "description": "Visual Studio Code extension for Artillery",
  "version": "0.1.0",
  "displayName": "Artillery: Distributed Load Testing",
  "publisher": "Artilleryio",
  "license": "MPL-2.0",
  "engines": {
    "vscode": "^1.80.0"
  },
  "scripts": {
    "compile": "webpack",
    "watch": "webpack --watch",
    "lint": "eslint src --ext ts",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js",
    "watch-tests": "tsc -p . -w --outDir out",
    "compile-tests": "tsc -p . --outDir out",
    "package": "webpack --mode production --devtool hidden-source-map",
    "prerelease": "npm run package",
    "release": "vsce publish $NEXT_VERSION --no-git-tag-version"
  },
  "categories": [
    "Testing",
    "Linters",
    "Other"
  ],
  "icon": "assets/logo.png",
  "galleryBanner": {
    "color": "#161616",
    "theme": "dark"
  },
  "keywords": [
    "testing",
    "load",
    "artillery",
    "script"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/artilleryio/vscode-artillery"
  },
  "homepage": "https://github.com/artilleryio/vscode-artillery/blob/main/README.md",
  "activationEvents": [
    "workspaceContains:**/*.yml"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Artillery",
      "properties": {
        "artillery.include": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "File paths or globs to always treat as Artillery test scripts",
          "examples": [
            [
              "prod.yml"
            ],
            [
              "load-tests/**/*.yaml"
            ]
          ]
        },
        "artillery.exclude": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "File paths or globs to never treat as Artillery test scripts",
          "examples": [
            [
              "config.yml"
            ],
            [
              "**/*.conf.yaml"
            ]
          ]
        }
      }
    },
    "commands": [
      {
        "command": "artillery.runTest",
        "title": "Run load test locally",
        "shortTitle": "Run test",
        "enablement": "editorIsOpen == true && editorLangId == 'yaml'"
      },
      {
        "command": "artillery.includeTestScript",
        "title": "Include this file as Artillery test script",
        "enablement": "editorIsOpen == true && editorLangId == 'yaml'"
      },
      {
        "command": "artillery.excludeTestScript",
        "title": "Exclude this file as Artillery test script",
        "enablement": "editorIsOpen == true && editorLangId == 'yaml'"
      },
      {
        "command": "artillery.clearScriptCache",
        "title": "Clear extension cache"
      }
    ]
  },
  "extensionDependencies": [
    "redhat.vscode-yaml"
  ],
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/js-yaml": "^4.0.5",
    "@types/micromatch": "^4.0.2",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "@vscode/vsce": "^2.20.1",
    "eslint": "^8.41.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1"
  },
  "dependencies": {
    "js-yaml": "^4.1.0",
    "micromatch": "^4.0.5"
  }
}
