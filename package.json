{
  "name": "vscode-artillery",
  "displayName": "Artillery: Distributed Load Testing",
  "description": "Visual Studio Code extension for Artillery",
  "version": "0.0.0",
  "private": true,
  "publisher": "Artilleryio",
  "license": "MPL-2.0",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Testing",
    "Linters",
    "Other"
  ],
  "icon": "assets/logo.png",
  "galleryBanner": {
    "color": "#161616",
    "theme": "dark"
  },
  "keywords": [
    "testing",
    "load",
    "artillery",
    "script"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/artilleryio/vscode-artillery"
  },
  "homepage": "https://github.com/artilleryio/vscode-artillery/blob/main/README.md",
  "activationEvents": [
    "workspaceContains:**/*.yml"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Artillery",
      "properties": {
        "vscode-artillery.testMatch": {
          "type": "string",
          "description": "Glob of the Artillery test scripts.",
          "default": "*.yml",
          "examples": [
            "test.yml",
            "**/*.test.yml"
          ]
        }
      }
    },
    "commands": [
      {
        "command": "artillery.runTest",
        "title": "Run load test with Artillery",
        "shortTitle": "Run test"
      }
    ]
  },
  "extensionDependencies": [
    "redhat.vscode-yaml"
  ],
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "ts-loader": "^9.4.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1",
    "@vscode/test-electron": "^2.3.2"
  }
}
